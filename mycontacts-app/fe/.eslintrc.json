{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            { "extensions": [".js", ".jsx"] }
        ],
        "react/react-in-jsx-scope": "off",
        "linebreak-style": "off",
        "import/prefer-default-export": "off"
    }
}
